{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://digidex.tech/botany.schema.json",
  "title": "Botany Application Model Schema",
  "description": "Models for managing plants.",
  "type": "object",
  "definitions": {
    "UserPlant": {
      "type": "object",
      "properties": {
        "user": {
          "type": ["string", "null"],
          "description": "Foreign key reference to User"
        },
        "name": {
          "type": "string",
          "description": "The name of the user plant",
          "maxLength": 255
        },
        "description": {
          "type": "string",
          "description": "A description of the user plant",
          "maxLength": 10000
        }
      },
      "required": ["user", "name"]
    },
    "UserPlantGalleryImage": {
      "type": "object",
      "properties": {
        "plant": {
          "type": "string",
          "description": "Foreign key reference to UserPlant",
          "maxLength": 255
        },
        "image": {
          "type": "string",
          "description": "Foreign key reference to Image",
          "maxLength": 10000
        },
        "caption": {
          "type": "string",
          "description": "A caption for the image"
        }
      },
      "required": ["plant", "image"]
    }
  },
  "properties": {
    "plants": { "$ref": "#/definitions/UserPlant" }
  }
}
