{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://digidex.tech/biology.schema.json",
  "title": "Biology Application Model Schema",
  "description": "Models for managing biology.",
  "type": "object",
  "definitions": {
    "Plant": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the plant",
          "maxLength": 255
        },
        "description": {
          "type": "string",
          "description": "A description of the plant",
          "maxLength": 10000
        },
        "collection": {
          "type": "string",
          "description": "The collection of the plant"
        }
      },
      "required": ["name"]
    }
  },
  "properties": {
    "plants": { "$ref": "#/definitions/Plant" }
  }
}
